{% extends 'base.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('event') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('event') }}
{% endblock %}

{% block body %}
    <div class="event-new">
        <div class="container">
            <div class="event-new__content">
                <div class="event-new__createSideBar">
                    <div class="event-new__createSideBar__top">
                        <h2>Créer un nouvel event-new</h2>
                        <p>Vous pouvez maintenant créer un nouvel evenemeent</p>
                    </div>


                </div>
                <div class="event-new__createMain">
                    {{ form_start(form) }}
                    <div class="event-new__createMain__forms">


                        <div class="event-new__createMain__form w-50">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="event-new__createMain__form w-50">
                            {{ form_row(form.place) }}
                        </div>
                        <div class="event-new__createMain__form w-50">
                            {{ form_row(form.price) }}
                        </div>
                        <div class="event-new__createMain__form w-50">
                            {{ form_row(form.category) }}
                        </div>
                        <div class="event-new__createMain__form w-50">
                            {{ form_row(form.startAt) }}
                        </div>
                        <div class="event-new__createMain__form w-50">
                            {{ form_row(form.endAt) }}
                        </div>
                        <div class="event-new__createMain__form w-50">
                            {{ form_row(form.capacity) }}
                        </div>

                        <div class="event-new__createMain__form w-50">
                            {{ form_row(form.picture) }}
                        </div>
                        <div class="event-new__createMain__form w-100">
                            {{ form_row(form.description) }}
                        </div>
                        {{ form_widget(form.envoyer) }}
                        {{ form_end(form) }}
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
