{% extends 'base.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('event') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('event') }}
{% endblock %}

{% block body %}
    <div class="event">
        <div class="container">
            <div class="event__heroHeader" style="background: url('{{ event.picture }}')">
                <h1>
                    {{ event.name }}
                </h1>
            </div>

            <ul>
                <li>{{ event.place.label }}</li>
                <li>{{ event.capacity }}</li>
                <li>{{ event.category.name }}</li>
                <li>{{ event.startAt | date('h:m:i') }}</li>
            </ul>
        </div>
    </div>

{% endblock %}
